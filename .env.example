# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/airtable-forms
# For Production (MongoDB Atlas): mongodb+srv://username:password@cluster.mongodb.net/airtable-forms

# Airtable OAuth Configuration
# Get these from: https://airtable.com/create/oauth
AIRTABLE_CLIENT_ID=your_airtable_client_id_here
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret_here
AIRTABLE_REDIRECT_URI=http://localhost:5000/api/auth/airtable/callback

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_session_secret_key_change_this

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration (for file uploads)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Webhook Configuration
WEBHOOK_BASE_URL=http://localhost:5000
# For Production: https://your-backend-domain.onrender.com

# Token Encryption (32-character hex string)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Airtable API
AIRTABLE_API_BASE_URL=https://api.airtable.com/v0
AIRTABLE_META_API_URL=https://api.airtable.com/v0/meta
